<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" stylesheets="@../css/dark.css"
            xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" layoutX="175.0" layoutY="92.0" prefHeight="200.0" prefWidth="100.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
            <Label fx:id="questionNumberLabel" text="Question #"/>
            <Label fx:id="categoryLabel" text="Category"/>
            <Label fx:id="difficultyLabel" text="Difficulty"/>
            <Label fx:id="typeLabel" text="Type"/>
        </HBox>
        <Separator prefWidth="200.0"/>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <Label fx:id="questionLabel" minHeight="-Infinity"
                   text="Here is a long question in order to test the text and see if it will fit inside the box or if it will cut off at the end of the available space. Is this the end of the questoin? Or This?"
                   textAlignment="CENTER" wrapText="true">
                <font>
                    <Font size="34.0"/>
                </font>
            </Label>
        </VBox>
        <GridPane vgap="30.0">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets left="50.0" right="50.0"/>
            </padding>
            <RadioButton fx:id="firstAnswerButton" mnemonicParsing="false" text="First Answer" wrapText="true">
                <toggleGroup>
                    <ToggleGroup fx:id="answerToggle"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="secondAnswerButton" mnemonicParsing="false" text="Second Answer"
                         toggleGroup="$answerToggle" wrapText="true" GridPane.columnIndex="1"/>
            <RadioButton fx:id="thirdAnswerButton" mnemonicParsing="false" text="Third Answer"
                         toggleGroup="$answerToggle" wrapText="true" GridPane.rowIndex="1"/>
            <RadioButton fx:id="fourthAnswerButton" mnemonicParsing="false" text="Fourth Answer"
                         toggleGroup="$answerToggle" wrapText="true" GridPane.columnIndex="1"
                         GridPane.rowIndex="1"/>
        </GridPane>
        <Separator prefWidth="200.0">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Separator>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackClicked" text="Back"/>
            <Button fx:id="nextDoneButton" mnemonicParsing="false" onAction="#onNextClicked" text="Next"/>
        </HBox>
    </VBox>
</AnchorPane>
