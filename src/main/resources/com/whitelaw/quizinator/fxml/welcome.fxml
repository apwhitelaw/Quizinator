<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" stylesheets="@../css/dark.css"
            xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"> <!-- fx:controller="com.whitelaw.quizinator.WelcomeController"> -->
    <VBox alignment="CENTER" layoutX="175.0" layoutY="92.0" prefHeight="200.0" prefWidth="100.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <Label fx:id="titleLabel" text="Welcome to Quizinator!">
                <font>
                    <Font size="42.0"/>
                </font>
            </Label>
            <Label text="Created by Austin Whitelaw"/>
        </VBox>
        <GridPane alignment="CENTER" hgap="10.0" vgap="20.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="72.0" minWidth="10.0"
                                   prefWidth="28.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="115.0" minWidth="10.0"
                                   prefWidth="93.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="107.0" minWidth="10.0"
                                   prefWidth="85.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="107.0" minWidth="10.0"
                                   prefWidth="31.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="97.0" minWidth="10.0"
                                   prefWidth="62.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="154.0" minWidth="10.0"
                                   prefWidth="132.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="87.0" minWidth="10.0"
                                   prefWidth="25.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets left="50.0" right="50.0"/>
            </padding>
            <ChoiceBox fx:id="categoryChoiceBox" prefWidth="150.0" GridPane.columnIndex="5"/>
            <ChoiceBox fx:id="difficultyChoiceBox" prefWidth="150.0" GridPane.columnIndex="2"
                       GridPane.rowIndex="1"/>
            <ChoiceBox fx:id="typeChoiceBox" prefWidth="150.0" GridPane.columnIndex="5" GridPane.rowIndex="1"/>
            <Spinner fx:id="numberOfQuestionsSpinner" GridPane.columnIndex="2"/>
            <Label text="# of Questions" GridPane.columnIndex="1"/>
            <Label text="Difficulty" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Category" GridPane.columnIndex="4"/>
            <Label text="Type" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
        </GridPane>
        <Separator prefWidth="200.0">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Separator>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
            <Button mnemonicParsing="false" onAction="#onQuitClicked" text="Quit"/>
            <Button mnemonicParsing="false" onAction="#onStartClicked" text="Start"/>
        </HBox>
    </VBox>
</AnchorPane>
